class Solution {
public:
    bool isIdealPermutation(vector<int>& A) {
        int global = 0, local = 0;
        int len = A.size();
        for (int i = 0; i < len-1; i++) {
            for (int j = i; j < len; j++) {
                if (A[i] > A[j]) global++;
            }
            if (A[i] > A[i + 1]) local++;
        }
        return (local==global);
    }
};

